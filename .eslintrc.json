{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended",
        "google"
    ],
    "plugins": [
        "promise"
    ],
    "rules": {
        "camelcase": ["off"],
        "no-console": ["off"],
        "require-jsdoc": ["off"],
        "one-var": ["off"],
        "guard-for-in": ["off"],
        "max-len": ["warn", {
            "ignoreComments": true,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "code": 200
        }],
        "indent": ["warn"],
        "no-unused-vars":["warn"],
        "no-extra-semi":["warn"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
